<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OptionsActivity"
    android:background="@color/colorCharcoal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".8">
    <ImageView
        android:id="@+id/btn_options_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/string_back"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:tint="@color/colorMintCream"
        android:paddingVertical="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/menu_bg_card_back"
        android:paddingVertical="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".8"
        app:layout_constraintWidth_percent=".8">

        <TextView
            android:id="@+id/optionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/string_options"
            android:textColor="@color/colorCharcoal"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".8"/>

        <Button
            android:id="@+id/btn_imageSet0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorCharcoal"
            android:drawableEnd="@drawable/ic_pineapple"
            android:text="@string/string_fruit_deck"
            android:textColor="@color/colorMintCream"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionTitle"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/btn_imageSet1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:drawableEnd="@drawable/ic_basketball"
            android:text="@string/string_sport_deck"
            android:textColor="@color/colorMintCream"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_imageSet0"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/btn_userImageSet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:drawableEnd="@drawable/camera"
            android:text="@string/string_user_photo_deck"
            android:textColor="@color/colorMintCream"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_imageSet1"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/btn_flickr_imageSet_choose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:text="@string/flickr_custom_set"
            android:textColor="@color/colorMintCream"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintTop_toBottomOf="@+id/btn_userImageSet"
            app:layout_constraintWidth_percent=".4" />

        <Button
            android:id="@+id/btn_flickr_imageSet_customize"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:text="@string/customize"
            android:textColor="@color/colorMintCream"
            app:layout_constraintHeight_percent=".15"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/btn_userImageSet"
            app:layout_constraintWidth_percent=".4" />

        <Button
            android:id="@+id/orderChangeBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:text="@string/current_order_size"
            android:textColor="@color/colorMintCream"
            app:layout_constraintHeight_percent=".10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_flickr_imageSet_customize"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/numOfCardsBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:text="@string/current_number_of_cards"
            android:textColor="@color/colorMintCream"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderChangeBtn"
            app:layout_constraintHeight_percent=".10"
            app:layout_constraintWidth_percent=".8" />

        <Button
            android:id="@+id/gameModeChange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="250dp"
            android:backgroundTint="@color/colorCharcoal"
            android:text=""
            android:textColor="@color/colorMintCream"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numOfCardsBtn"
            app:layout_constraintHeight_percent=".10"
            app:layout_constraintWidth_percent=".8" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>