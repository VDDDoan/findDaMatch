<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_game_flavour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:width="128dp"
        android:gravity="center"
        android:text="@string/string_enter_name"
        android:textColor="@color/colorCharcoal"
        app:layout_constraintStart_toStartOf="@+id/e_text_username"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e_text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_game_flavour"
        android:autofillHints=""
        tools:ignore="LabelFor" />
</androidx.constraintlayout.widget.ConstraintLayout>